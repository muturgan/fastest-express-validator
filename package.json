{
  "name": "fastest-express-validator",
  "version": "1.3.0",
  "description": "request validation middleware for express",
  "author": "Andrey Sakharov <caxap_8787@mail.ru> (https://www.linkedin.com/in/andrey-sakharov/)",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=14.18.2"
  },
  "scripts": {
    "build": "(rm -rf dist || npx rimraf dist) && tsc",
    "lint": "tslint 'src/**/*.ts'",
    "just_test": "mocha -t 10000 tests/**/*.test.js",
    "calculate_coverage": "nyc --include=dist/**/*.js --reporter=json-summary --reporter=text --reporter=text-summary",
    "check_coverage": "node tools/check_coverage.cjs",
    "test": "npm run calculate_coverage npm run just_test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muturgan/fastest-express-validator.git"
  },
  "keywords": [
    "express",
    "validation",
    "validators",
    "validate",
    "schema"
  ],
  "bugs": {
    "url": "https://github.com/muturgan/fastest-express-validator/issues"
  },
  "homepage": "https://github.com/muturgan/fastest-express-validator#readme",
  "files": [
    "dist"
  ],
  "dependencies": {
    "fastest-validator": "^1.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^14.18.5",
    "express": "^4.17.2",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4",
    "undici": "^4.12.1"
  }
}
